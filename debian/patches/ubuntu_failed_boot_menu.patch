     title="$(gettext_quoted "%s, with Linux %s")"
   fi
   printf "menuentry '${title}' ${CLASS} {\n" "${os}" "${version}"
+  cat << EOF
+	recordfail
+EOF
   if ! ${recovery} ; then
       save_default_entry | sed -e "s/^/\t/"
   fi
