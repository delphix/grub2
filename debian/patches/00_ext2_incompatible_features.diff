   data->disk = disk;
 
   data->diropen.data = data;
@@ -520,7 +577,6 @@
   return data;
 
  fail:
-  grub_error (GRUB_ERR_BAD_FS, "not an ext2 filesystem");
   grub_free (data);
   return 0;
 }
