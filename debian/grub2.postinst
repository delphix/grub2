#!/bin/sh -e

case "$1" in
  configure)
    # transition happened in 1.95-1, but we forgot to issue this warning back then
    if [ ! -z "$2" ] && dpkg --compare-versions "$2" lt 1.95-2 ; then
      . /usr/share/debconf/confmodule
      db_input critical grub2/numbering_scheme_transition || true
      db_go
    fi
  ;;
  abort-upgrade|abort-remove|abort-deconfigure)
  ;;
  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
